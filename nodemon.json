{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "package.json"
    ],
    "verbose": true,
    "events": {
      "restart": "'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "app.js",
      "views/home.ejs",
      "public/style/main.css"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json ejs"
  }